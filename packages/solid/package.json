    },
    "./jsx-runtime": "./jsx-runtime.d.ts",
    "./jsx-dev-runtime": "./jsx-runtime.d.ts"
  },
  "devDependencies": {
    "@types/babel__core": "7.20.5",
    "@types/bun": "latest"
  },
  "dependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-typescript": "7.27.1",
    "@opentui/core": "workspace:*",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-preset-solid": "1.9.9",
    "s-js": "^0.4.9"
  },
  "peerDependencies": {
    "solid-js": "1.9.9",
    "typescript": "^5"
  }
}
